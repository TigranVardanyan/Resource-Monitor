{
  "name": "Resource Monitor",
  "description": "Extensions for tracking and visualizing the amount of RAM available.",
  "version": "1.0.2",
  "manifest_version": 3,
  "options_page": "index.html",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting", "system","system.display", "system.memory", "tabs", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/icon_0.png",
      "32": "assets/images/icon_0.png",
      "48": "assets/images/icon_0.png",
      "128": "assets/images/icon_0.png"
    }
  },
  "icons": {
    "16": "assets/images/icon_0.png",
    "32": "assets/images/icon_0.png",
    "48": "assets/images/icon_0.png",
    "128": "assets/images/icon_0.png"
  }
}